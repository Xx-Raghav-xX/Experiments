cout << endl;

if(choice==1)
{
int a;
cin >> a;
if(a%2==0)
{
    cout << "the number is even";
}
else
{
    cout << "the number is odd";
}
} 
//---------------------------------------------------------------
else if (choice==2)
{
int n,i,temp;

  if (n == 0 || n == 1)
    temp = 1;
 i=2;
  do 
  {
    if (n % i == 0)
    {
      temp = 1;
      break;
    }
    i++;
  }
  while (i <= n / 2);

  if (temp == 0)
   { 
    cout <<"number is a prime number.";
   }
  else
  {
    cout <<"number is not a prime number.";
  }
  for (int i = 1; i <= 11; i++) {
      if (i==2 ||  i==3 ||  i==5 || i==7 || i==11) 
      {
           cout << i;
      }
    }

}
